# BOOM Protocol Bot Configuration
# Copy to .env and fill in your values

# Solana Network (devnet for testing)
BOOM_RPC_URL=https://api.devnet.solana.com

# Your wallet keypair (for signing transactions)
BOOM_KEYPAIR_PATH=~/.config/solana/id.json

# BOOM Protocol Program ID
BOOM_PROGRAM_ID=BOOM111111111111111111111111111111111111111

# Token mint address to monitor
BOOM_TOKEN_MINT=YourTokenMintAddressHere

# Market cap threshold in USD (triggers explosion)
BOOM_MARKET_CAP_THRESHOLD=100000

# Revealed cap value for the smart contract (in lamport-style representation)
BOOM_REVEALED_CAP_LAMPORTS=100000000000

# Polling interval (seconds)
BOOM_POLL_INTERVAL_SECONDS=5

# Use Jupiter API for prices (simpler) or Pyth
BOOM_USE_JUPITER=true

# Pyth price feed ID (if using Pyth instead of Jupiter)
# BOOM_PYTH_PRICE_FEED_ID=

# Logging
BOOM_LOG_LEVEL=INFO
BOOM_LOG_FILE=boom_bot.log

# Dry run mode - set to false to actually trigger explosions!
BOOM_DRY_RUN=true
